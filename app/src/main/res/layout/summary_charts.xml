<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="com.esri.android.ecologicalmarineunitexplorer.MainActivity">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:orientation="horizontal">

        <LinearLayout android:layout_width="0dp"
                      android:layout_weight="1"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:layout_gravity="center_vertical" android:background="@drawable/background_rect"
                      android:layout_margin="4dp"
                      android:id="@+id/chart1Holder">
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="Temperature" android:gravity="center"/>
            <com.github.mikephil.charting.charts.CombinedChart
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="20"
                    android:id="@+id/chart1"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:id="@+id/txtTemp"
                      android:text="34.3" android:gravity="center"/>
        </LinearLayout>

        <LinearLayout android:layout_width="0dp"
                      android:orientation="vertical"
                      android:layout_weight="1"
                      android:layout_height="match_parent"
                      android:background="@drawable/background_rect"
                      android:layout_gravity="center_vertical"
                      android:layout_margin="4dp">
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="Salinity" android:gravity="center"/>
            <com.github.mikephil.charting.charts.CombinedChart
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="20"
                    android:id="@+id/chart2"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:id="@+id/txtSalinity"
                      android:text="24.5" android:gravity="center"/>
        </LinearLayout>

        <LinearLayout android:layout_width="0dp"
                      android:orientation="vertical"
                      android:layout_weight="1"
                      android:layout_height="match_parent"
                      android:layout_gravity="center_vertical"
                      android:background="@drawable/background_rect"
                      android:layout_margin="4dp">
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="Oxygen" android:gravity="center"/>
            <com.github.mikephil.charting.charts.CombinedChart
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="20"
                    android:id="@+id/chart3"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:id="@+id/txtOxygen"
                      android:text="32.4" android:gravity="center"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:orientation="horizontal" android:padding="2dp">

        <LinearLayout android:layout_width="0dp"
                      android:layout_weight="1"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:layout_gravity="center_vertical"
                      android:background="@drawable/background_rect"
                      android:layout_margin="4dp">
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="Nitrate" android:gravity="center"/>
            <com.github.mikephil.charting.charts.CombinedChart
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="20"
                    android:id="@+id/chart4"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:id="@+id/txtNitrate"
                      android:text="2.3" android:gravity="center"/>
        </LinearLayout>

        <LinearLayout android:layout_width="0dp"
                      android:orientation="vertical"
                      android:layout_weight="1"
                      android:layout_height="match_parent"
                      android:layout_gravity="center_vertical"
                      android:background="@drawable/background_rect"
                      android:layout_margin="4dp">
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="Phosphate" android:gravity="center"/>
            <com.github.mikephil.charting.charts.CombinedChart
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="20"
                    android:id="@+id/chart5"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:id="@+id/txtPhosphate"
                      android:text="14.5" android:gravity="center"/>
        </LinearLayout>

        <LinearLayout android:layout_width="0dp"
                      android:orientation="vertical"
                      android:layout_weight="1"
                      android:layout_height="match_parent"
                      android:layout_gravity="center_vertical"
                      android:background="@drawable/background_rect"
                      android:layout_margin="4dp">
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="Silicate" android:gravity="center"/>
            <com.github.mikephil.charting.charts.CombinedChart
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:id="@+id/chart6"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:id="@+id/txtSilicate"
                      android:text="32.4" android:gravity="center"/>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>
